page{
	height: 100%;
	color: #333;
  display: flex;
  flex-direction: column;
 	font: normal 30rpx/1.68 -apple-system-font, 'Helvetica Neue', Helvetica, 'Microsoft YaHei', sans-serif;
}
.container{
	background-color: white;
}
.service-list{
	padding: 0 20rpx;
}
.service-item{
	display: flex;
	padding: 20rpx 0; 
	border-bottom: 1rpx solid #e8e8e8;
	background-color: white;
}
.service-img{
	width: 180rpx;
}
.service-item image{
	width: 180rpx;
	height: 126rpx;
}
.service-text{
	flex: 1;
	margin-left: 20rpx;
	width: 100%;
}
.service-text .service-tite{
	color: #333;
	width: 100%;
	font-size: 34rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.service-tags0{
	margin: 6rpx 0;
}
.service-tags0 text{
	padding: 6rpx 16rpx;
	border: 1rpx solid #f7982a;
	line-height: 1;
	color: #f7982a;
	font-size: 28rpx;
	border-radius: 4rpx;
	margin-right: 10rpx;
	margin-bottom: 10rpx;
	white-space: nowrap;
}

.service-tags1{
	margin: 6rpx 0;
}
.service-tags1 text{
	padding: 6rpx 16rpx;
	line-height: 1;
	color: black;
	font-size: 28rpx;
	margin-right: 10rpx;
	margin-bottom: 10rpx;
	white-space: nowrap;
}


.service-city{
	color: #666;
}
.container {
	flex: 1;
  display: flex;
  flex-direction: column;
 	box-sizing: border-box;
}
.container-body{
	flex: 1;
	overflow-y: auto;
	overflow-x: hidden;
}