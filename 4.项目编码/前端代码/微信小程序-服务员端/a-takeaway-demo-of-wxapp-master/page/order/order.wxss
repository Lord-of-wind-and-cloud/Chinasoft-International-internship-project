page {
	height: 100%;
	overflow: hidden;
}
.container {
	height: 100%;
	overflow: hidden;
}

.head {
	padding: 20rpx 25rpx;
	color: #646464;
	font-size: 35rpx;
	line-height: 30rpx;
	background: #f7f7f7;
}
.head .dishId{
	width: 100px;
}
.head .tableNumber{
	width: 100px;
}
.head .guestNumber{
	display: flex;
	width: 300rpx;
	height: 50rpx;
	display: flex;
	box-sizing: border-box;
	padding: 5px 0;
}


.head .head-container{
	position: absolute; 
	left: 174rpx; 
	top: 118rpx;
	height: 50rpx;
	width: 400rpx;
	padding: 0px 8px;
	display: flex;

}

.head .head-container .reduce {
	position: absolute;
	font-size: 60rpx;
	left: 0rpx; 
	top: 0rpx;
	background: #feb70f;
	width: 50rpx;
	height: 50rpx;
	padding: 3px 6px;
	border-radius: 50%;
	display: block;
	box-sizing: border-box;

}

.head .head-container .number{
	position: relative;
	display: flex;
	font-size:large;
	left: 56rpx; 
	top: 0rpx;
	width: 50rpx;
	height: 50rpx;
	display: flex;
	box-sizing: border-box;
	padding: 5px 0;
	text-align: center;
}
.head .head-container .add {
	position: relative;
	font-size: 60rpx;
	background: #feb70f;
	left: 54rpx; 
	top: 0rpx;
	width: 50rpx;
	height: 50rpx;
	padding: 4px 4px;
	border-radius: 50%;
	display: block; box-sizing: border-box
}






.content-container {
	display: -webkit-flex;
	height: 100%;
	box-sizing: border-box;
	padding-bottom: 100rpx;
}

.classify-container {
	width: 180rpx;
	background: #efefef;
	height: 100%;
}
.classify-container .classify {
	padding: 50rpx 30rpx;
	text-align: center;
	border-bottom: 1px dashed #aaa;
}
.classify-container .classify.active {
	background: #fff;
}
.classify-container .classify .name {
	display: inline-block;
	font-size: 30rpx;
	color: #646464;
	line-height: 1.2;
	text-align: left;
	pointer-events: none;
}

.goods-container {
	-webkit-flex: 1;
	background: #ffffff;
	height: 83%;
}
.goods-container .title {
	padding: 20rpx 25rpx;
	color: #646464;
	font-size: 30rpx;
	line-height: 30rpx;
	background: #f7f7f7;
}

.goods-container .goods {
	position: relative;
	padding: 20rpx 30rpx;
	font-size: 36rpx;
	line-height: 40rpx;
	border-bottom: 1px solid #f7f7f7;
	display: flex;
	width: 572rpx;
	height: 158rpx; 
	box-sizing: border-box; 
	left: 0rpx; 
	top: 0rpx
}
.goods-container .goods .pic {
	float: left;
	width: 130rpx;
	height: 130rpx;
	margin-right: 20rpx;
}

.goods-container .goods .right{
	width: 392rpx; 
	height: 118rpx; 
	display: block; 
	box-sizing: border-box
}
.goods-container .goods .name {
	color: #000;
	font-size: 36rpx;
	line-height: 46rpx;
}
.goods-container .goods .price {
	color: #f45044;
	font-size: 36rpx;
	line-height: 46rpx;
}
.goods-container .goods .addCart {
	position: absolute;
	right: 30rpx;
	bottom: 30rpx;
	width: 64rpx;
	height: 64rpx;
	background: #feb70f;
	border-radius: 50%;
}

.goods-container .goods .addCart image {
	pointer-events: none;
	position: absolute;
	left: 20rpx;
	top: 20rpx;
	width: 24rpx;
	height: 24rpx;
}
.soldout{
	position: relative;
}

.num-container{
	width: 80rpx;
	height: 40rpx;
	position: relative;
	left: 170rpx; 
	top: -50rpx;
	display: inline;	 
}
.num_container{
	position: absolute;
	display: inline;
	left: 360rpx;
	width: 300rpx;
	height: 55rpx;
	top: 106rpx
}
.goods-container .goods .num_container .reduce{
	position: relative; 
	left: 37rpx; 
	top: -17rpx;
	width: 73rpx; 
	height: 73rpx; 
	box-sizing: border-box
}
.goods-container .goods .num_container text{
	position: relative; 
	left: 44rpx;
	top: -41rpx
}

.goods-container .goods .num_container .add{
	position: absolute; 
	left: 150rpx;
	top: -12rpx;
	 width: 65rpx; 
	 height: 65rpx; 
	 display: inline-block; 
	 box-sizing: border-box
}
	 
.cart-detail, .cart-detail .mask {
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
}
.cart-detail .mask {
	background: rgba(0,0,0,0.7);
}
.cart-detail .list {
	position: absolute;
	left: 0;
	bottom: 100rpx;
	width: 100%;
	background: #f7f7f7;
	padding: 30rpx 0;
}
.cart-detail .list image{
	float: left;
	width: 80rpx;
	height: 80rpx;
}
.cart-detail .list .item {
	display: -webkit-flex;
	color: #333;
	font-size: 36rpx;
	line-height: 50rpx;
	padding: 20rpx 40rpx;
}
.cart-detail .list .item .name {
	-webkit-flex: 1;
}
.cart-detail .list .item .total {
	width: 120rpx;
}
.cart-detail .list .item .reduce,
.cart-detail .list .item .add {
	font-size: 50rpx;
	background: #feb70f;
	width: 50rpx;
	height: 50rpx;
	text-align: center;
	border-radius: 50%;
}
.cart-detail .list .item .num {
	width: 50rpx;
	text-align: center;
	margin: 0 5rpx;
}

.cart {
	display: -webkit-flex;
	position: absolute;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 100rpx;
	background: #fff;
}
.cart .data {
	-webkit-flex: 1;
	/*border-top: 1rpx solid #e7e7e7;*/
}
.cart .data .icon {
	position: absolute;
	left: 40rpx;
	top: -20rpx;
	width: 100rpx;
	height: 100rpx;
	background: #feb70f;
	border-radius: 50%;
}
.cart .data .icon image {
	position: absolute;
	left: 15rpx;
	top: 15rpx;
	width: 70rpx;
	height: 70rpx;
}
.cart .data .icon .count {
	position: absolute;
	left: 70rpx;
	top: -10rpx;
	font-size: 30rpx;
	line-height: 40rpx;
	padding: 0 12rpx;
	color: #fff;
	background: #f45044;
	border-radius: 20rpx;
}
.cart .data .total {
	color: #f45044;
	font-size: 36rpx;
	line-height: 100rpx;
	padding-left: 160rpx;
}
.cart .memo{
	color: #f45044;
	font-size: 36rpx;
	line-height: 100rpx;
	padding-right: 50rpx;
}
.cart button {
	width: 242rpx; 
	height: 99rpx; 
	display: block; 
	box-sizing: border-box; 
	left: 0rpx; 
	top: 0rpx
}
.memoMessage{
	width: 591rpx; 
	height: 108rpx;
	position: fixed;
	display: block;
	left: 80rpx; 
	top: 973rpx;
  	background:white;
  	opacity: 1;
  	overflow: hidden;
  	z-index: 1000;
  	color:rgba(0,0,0,0.7);
